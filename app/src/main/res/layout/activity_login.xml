<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avant"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textSize="21dp"
        android:text="Please fill your login details below">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avant"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:text="Email">
    </TextView>

    <EditText
        android:id="@+id/txt_email_login"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/avant"
        android:textSize="16dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/darkgrey"
        android:hint="e.g name@email.com"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avant"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:text="Password">
    </TextView>

    <EditText
        android:id="@+id/txt_password_login"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"
        android:fontFamily="@font/avant"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/darkgrey"
        android:hint="Type your password here"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <TextView
        android:id="@+id/tv_account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avant"
        android:layout_marginTop="18dp"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:text="Don\'t have an account yet? Register">
    </TextView>

    <Button
        android:id="@+id/btn_continue_login"
        android:background="@color/green"
        android:fontFamily="@font/avant"
        android:textColor="@color/white"
        android:text="Continue"
        android:textStyle="bold"
        android:layout_marginTop="320dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>

</LinearLayout>